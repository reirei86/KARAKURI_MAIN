{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: clang アクティブなファイルのビルド",
        "type": "shell",
        "command": "/path/to/clang", // clangのパスを指定
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.out"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "生成されたビルドタスク"
      }
    ]
  }
  